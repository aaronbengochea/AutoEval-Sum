# ── Google / Gemini (required) ────────────────────────────────────────────────
GOOGLE_API_KEY=your-google-api-key-here
# Model overrides (defaults shown)
LLM_MODEL=gemini-2.0-flash
EMBEDDING_MODEL=text-embedding-004

# ── Pinecone (required) ───────────────────────────────────────────────────────
PINECONE_API_KEY=your-pinecone-api-key-here
# Index config (defaults shown)
PINECONE_INDEX_NAME=autoeval-sum
PINECONE_ENVIRONMENT=us-east-1
PINECONE_CLOUD=aws
PINECONE_METRIC=cosine
PINECONE_EMBEDDING_DIMENSION=768

# ── DynamoDB local (defaults shown — override for real AWS) ───────────────────
AWS_REGION=us-east-1
DYNAMODB_ENDPOINT_URL=http://dynamodb-local:8000

# ── DynamoDB table names (defaults shown) ────────────────────────────────────
DYNAMODB_RUNS_TABLE=AutoEvalRuns
DYNAMODB_DOCUMENTS_TABLE=Documents
DYNAMODB_SUITES_TABLE=EvalSuites
DYNAMODB_RESULTS_TABLE=EvalResults

# ── Run defaults (defaults shown) ─────────────────────────────────────────────
DEFAULT_SEED=42
DEFAULT_CORPUS_SIZE=50
DEFAULT_SUITE_SIZE=20
MAX_TOKEN_BUDGET=300000
RUN_WORKERS=4

# ── MSMARCO dataset (defaults shown) ──────────────────────────────────────────
MSMARCO_DATASET=microsoft/ms_marco
MSMARCO_CONFIG=v1.1
MSMARCO_SPLIT=train
MSMARCO_SCAN_LIMIT=5000

# ── App settings (defaults shown) ─────────────────────────────────────────────
DEBUG=false
LOG_LEVEL=INFO

# ── Frontend (required for Next.js) ──────────────────────────────────────────
NEXT_PUBLIC_API_URL=http://localhost:8080
